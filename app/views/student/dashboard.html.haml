// The dashboard for Students

- content_for :title, "Home"
.code-div
  .row.justify-content-center
    .col-sm-6.col-lg-4
      .card.card-light
        = simple_form_for 'session_code', url: "/student/validate", method: :post, data: { remote: true } do |f|
          .card-header
            Enter Code
          .card-body
            = f.input :session_code, autofocus: true, required: true
          .card-footer
            .row.justify-content-center
              = submit_button 'Sign In'