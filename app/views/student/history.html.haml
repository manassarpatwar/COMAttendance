- content_for :title, "History"


= render :partial => "components/date-picker", locals: {week: @week,week_start: @week_start,week_end: @week_end,start: @start,endVar: @end, path: current_user.admin ? admin_path : student_history_path,isStudent: true}


.d-flex.justify-content-between.align-items-center
    %h1.mb-0
        History

    %h3
        %span.badge.badge-secondary
            =@history.length()
%hr

#accordians.py-5
    - if @history.empty?
        %center.alert.alert-warning You have not attended any sessions.
    - else
        = render :partial => "components/week-view", locals: {sessions: @history}
