// The dashboard for Lecturers/Admins

- content_for :title, "Home"

//New button
.py-2
    %a.btn.btn-success{:href => new_timetabled_session_path}
        New Session


= render :partial => "components/date-picker", locals: {week: @week,week_start: @week_start,week_end: @week_end,start: @start,endVar: @end, path: current_user.admin ? admin_path : lecturer_path}

.d-flex.justify-content-between.align-items-center
    %h1.mb-0
        Sessions

    %h3
        %span.badge.badge-secondary
            =@sessions.length()
    
%hr



#accordians.py-5
    -if @sessions.empty?
        %center.alert.alert-warning There are no timetabled sessions.
    -else
        = render :partial => "components/week-view", locals: {sessions: @sessions}



    
