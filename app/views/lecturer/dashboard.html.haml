// The dashboard for Lecturers/Admins

- content_for :title, "Home"

//New button
.py-2
    %a.btn.btn-success{:href => new_timetabled_session_path}
        New Session


%h1
    Sessions
%hr

%nav{"aria-label" => "..."}
    %ul.pagination
        %li.page-item{:class => ("disabled" if @page == 0)}
            %a.page-link{:href => "#{admin_path}?offset=#{@offset-@limit}", :tabindex => "-1"} Previous
        - (0..(@count/@limit)-1).each do |page|
            %li.page-item{:class => ("active" if page == @page)}
                %a.page-link{:href => "#{admin_path}?offset=#{page*@limit}"}
                    = page+1
        %li.page-item{:class => ("disabled" if @page == (@count/@limit-1))}
            %a.page-link{:href => "#{admin_path}?offset=#{@offset+@limit}"} Next

-if @sessions.empty?
    %center.alert.alert-warning There are no timetabled sessions.
-else
    //Load all the sessions into an accordian
    #accordian.py-5
        - @sessions.each do |session|
            = render :partial => "components/accordian-card#{current_user.admin ? '-admin' : ''}", locals: {session: session}