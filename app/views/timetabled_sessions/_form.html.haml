-# frozen_string_literal: true
= simple_form_for(@timetabled_session) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    -#= f.input :session_code
    = f.input :session_title
    = f.input :module_code
    = f.datetime_field :start_time
    = f.datetime_field :end_time
    = f.input :creator
    = f.input :report_email


  %button#addLecturerField.btn.btn-outline-primary.mb-2{:type => "button"}
    %span
      = icon "fas", "plus"
    %span.ml-1
      Add Lecturer(s)

  #addedLecturers.mb-5.mt-2


  .form-actions
    = f.button :submit, class: "btn btn-primary"
